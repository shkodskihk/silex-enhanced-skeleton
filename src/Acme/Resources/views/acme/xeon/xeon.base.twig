{% extends "bootstrap.base.twig" %}

{% block pagetitle %}Xeon | OnePage Responsive Theme{% endblock %}

{% block htmlhead %}
    <link href="{{ asset('assets/acme/css/prettyPhoto.css') }}" rel="stylesheet" />
    <link href="{{ asset('assets/acme/css/main.css') }}" rel="stylesheet" />
    <link rel="shortcut icon" href="{{ asset('assets/acme/images/ico/favicon.ico') }}" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144"
          href="{{ asset('assets/acme/images/ico/apple-touch-icon-144-precomposed.png') }}" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114"
          href="{{ asset('assets/acme/images/ico/apple-touch-icon-114-precomposed.png') }}" />
