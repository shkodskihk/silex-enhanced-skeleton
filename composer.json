{
    "name": "fluency/silex-enhanced-skeleton",
    "description": "Silex enhanced with custom service providers.",
    "keywords": [
        "Silex", "Symfony2", "frameworks", "application", "skeleton"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Rafael Ernesto Espinosa Santiesteban",
            "email": "ralphlnx@gmail.com"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "Fluency\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.3.3",
        "fluency/silex-enhanced": "~0.7",
        "leafo/lessphp": "~0.4.0",
        "leafo/scssphp" : "~0.1",
        "components/jquery":  "~2.0",
        "components/font-awesome": "~4.0",
        "components/bootstrap": "~3.2",
        "components/bootstrap-default": "~3.2",
        "afarkas/html5shiv": "~3.7",
        "scottjehl/respond": "~1.4"
    },
    "require-dev":{
        "phpunit/phpunit": "~4.5",
        "squizlabs/php_codesniffer": "~2.0"
    },
    "config": {
        "bin-dir": "bin",
        "component-dir": "web/assets",
        "github-protocols": ["https", "http", "ssh", "git"]
    },
    "scripts": {
        "post-update-cmd": "Fluency\\Silex\\Composer\\ScriptHandler::assetsInstall"
    },
    "extra": {
        "app-dir": "app",
        "web-dir": "web",
        "var-dir": "var",
        "assets-install": "symlink"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://satis.fluency.com"
        },
        {
            "type": "package",
            "package": {
                "name": "afarkas/html5shiv",
                "type": "component",
                "version": "3.7.2",
                "dist": {
                    "url": "https://github.com/aFarkas/html5shiv/archive/3.7.2.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/aFarkas/html5shiv.git",
                    "type": "git",
                    "reference": "3.7.2"
                },
                "extra": {
                    "component": {
                        "scripts": [
                            "dist/html5shiv.js"
                        ]
                    }
                },
                "require": {
                    "robloach/component-installer": "*"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "scottjehl/respond",
                "type": "component",
                "version": "1.4.2",
                "dist": {
                    "url": "https://github.com/scottjehl/Respond/archive/1.4.2.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/scottjehl/Respond.git",
                    "type": "git",
                    "reference": "1.4.2"
                },
                "extra": {
                    "component": {
                        "scripts": [
                            "src/respond.js"
                        ]
                    }
                },
                "require": {
                    "robloach/component-installer": "*"
                }
            }
        }
    ]
}
